{
    "compilerOptions": {
        "target": "ES2022",
        "module": "CommonJS",
        "moduleResolution": "node",
        "outDir": "./electron-dist",
        "strict": true,
        "noEmitOnError": true,
        "isolatedModules": false,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true
    },
    "include": ["electron/**/*.ts"],
    "exclude": ["node_modules"]
}